@model WebApplication1.Models.BusinessGood

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .input-validation-error {
        background-color: lightcoral;
        border: 1px solid red;
    }

    .validation-summary-errors {
        color: red;
        font-size: 22px;
    }

    ul {
        list-style-type: none;
    }
</style>
<h2>Редактирование</h2>


@using (Html.BeginForm("Edit", "Admin", FormMethod.Post))
{

    <div>
        @Html.ValidationSummary()
    </div>
    @*<div class="form-group">
        
        <input type="file"  name="fileUpload" /><br />
    </div>*@
    <div class="form-group">
        @Html.Label("GoodName", new { @class = "col-form-label" })
        <p>  @Html.EditorFor(model => model.GoodName, new { htmlAttributes = new { @class = "form-control" } })</p>
    </div>
    <div class="form-group">
        @Html.Label("Price", new { @class = "col-form-label" })
        <p>  @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } }) </p>
    </div>
    <div class="form-group">
        @Html.Label("GoodCount", new { @class = "col-form-label" })
        <p>  @Html.EditorFor(model => model.GoodCount, new { htmlAttributes = new { @class = "form-control" } })</p>
    </div>
    <div class="form-group">
        @Html.Label("Category", new { @class = "col-form-label" })
        <p>  @Html.EditorFor(model => model.Category.CategoryName, new { htmlAttributes = new { @class = "form-control" } })</p>
    </div>
    <div class="form-group">
        @Html.Label("Manufacturer", new { @class = "col-form-label" })
        <p>  @Html.EditorFor(model => model.Manufacturer.ManufacturerName, new { htmlAttributes = new { @class = "form-control" } })</p>
    </div>
    <div class="form-group">
        @Html.Label("Photo", new { @class = "col-form-label" })
        <p>  @Html.EditorFor(model => model.PhotoPath, new { htmlAttributes = new { @class = "form-control" } })</p>
    </div>
    <div class="form-group" hidden>
        @Html.Label("Id", new { @class = "col-form-label" })
        <p>  @Html.EditorFor(model => model.GoodId, new { htmlAttributes = new { @class = "form-control" } })</p>
    </div>
    <div>
        <input type="submit" class="btn btn-success" value="Сохранить">
    </div>
    <div class="container">
        @Html.Label("Photo", new { @class = "col-form-label" })
        <p> <img src="@Model.PhotoPath" class="rounded float-left"></p>

    </div>
}




